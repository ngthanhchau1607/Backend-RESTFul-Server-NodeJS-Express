<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home Page</title>
    <link rel="stylesheet" href="/css/styles.css">
    <style>
      table {
        border-collapse: collapse;
        width: 100%;
      }
      
      th, td {
        padding: 8px;
        text-align: left;
        border-bottom: 1px solid #ddd;
      }
      
      tr:hover {background-color: #ccc;}
      </style>
</head>
  
<body>
  <div class="topnav">
    <a class="active" href="/">Home</a>
    <a href="/create_user">Create User</a>
  </div>
      <h2>List User</h2>
      
      <table>
        <tr>
          <th>ID</th>
          <th>Email</th>
          <th>Name</th>
          <th>City</th>
          <th>Action</th>
        </tr>
      
        <% listUsers.forEach((user, index) => { %>
          <tr>
            <td><%= user.id %></td>
            <td><%= user.email %></td>
            <td><%= user.name %></td>
            <td><%= user.city %></td>
            <td>
              <a href="/update/<%= user.id %>">Edit</a> | 
              <form action="/delete-user/<%= user.id %>" method="post">
                  <button>Delete</button>
              </form>
            </td>
          </tr>
        <% }); %>
        
      </table>
</body>
</html>