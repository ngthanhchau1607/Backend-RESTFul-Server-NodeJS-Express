<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Delete</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <div class="topnav">
        <a  href="/">Home</a>
        <a  href="/create_user">Create User</a>
      </div>

      <form action="/delete-user" method="post">
        <fieldset>
          <legend>Delete a user:</legend>
          
          <!-- Ẩn trường ID -->
          <label class="d-none" for="id">Id:</label>
          <input class="d-none" type="text" id="id" name="userId" value="<%= userEdit.id %>"><br><br>
    
          <!-- Thêm thông báo xác nhận xóa -->
          <p>Are you sure you want to delete this <%= userEdit.name %>?</p>
    
          <button type="submit">Confirm</button>
        </fieldset>
    </form>
    
</body>
</html>